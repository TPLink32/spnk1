<dashboard stylesheet="application.css">
	<label>IPS Overview</label>
	
	<row>
		<chart>
			<title>IPS Events by Severity</title>
			<searchName>Cisco IPS - Overview - IPS Events By Severity</searchName>
			<option name="charting.chart">area</option>
			<option name="charting.chart.nullValueMode">zero</option>
			<option name="charting.chart.stackMode">stacked</option>
		</chart>
		<chart>
			<title>IPS Severity Distribution</title>
			<searchName>Cisco IPS - Overview - IPS Severity Distribution</searchName>
			<option name="charting.chart">pie</option>
		</chart>
		<single>
			<title>Threat Rating</title>
			<searchName>Cisco IPS - Overview - Average Threat Rating</searchName>
		</single>
		<single>
			<title>Threat Risk</title>
			<searchName>Cisco IPS - Overview - Average Risk Rating</searchName>
		</single>
	</row>
	<row>
		<table>
			<title>Top Signatures</title>
			<searchName>Cisco IPS - Overview - Top Signatures</searchName>
			<option name="rowNumbers">true</option>
			<option name="dataOverlayMode">heatmap</option>
		</table>
		<table>
			<title>Top Attackers</title>
			<searchName>Cisco IPS - Overview - Top Attackers</searchName>
			<option name="rowNumbers">true</option>
			<option name="dataOverlayMode">heatmap</option>
		</table>
		<table>
			<title>Top Targets</title>
			<searchName>Cisco IPS - Overview - Top Targets</searchName>
			<option name="rowNumbers">true</option>
			<option name="dataOverlayMode">heatmap</option>
		</table>
	</row>
</dashboard>
