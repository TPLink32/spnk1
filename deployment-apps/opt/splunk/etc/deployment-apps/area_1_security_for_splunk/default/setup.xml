<setup>
    <block title="Set Up Area Alerts Endpoint Call Parameters">
        <text>
            &lt;i&gt;Provide parameters or use as defaults&lt;/i&gt;
        </text>
    </block>
    <block title="Specify the URL authorization username" endpoint="areaapiendpoint/apiarea"
           entity="area_api_request_params">
        <input field="username">
            <label>username</label>
            <type>text</type>
        </input>
    </block>
    <block title="Specify the URL authorization password" endpoint="areaapiendpoint/apiarea"
           entity="area_api_request_params">
        <input field="password">
            <label>password</label>
            <type>password</type>
        </input>
    </block>
    <block title="Specify the Area One API URL, or use default" endpoint="areaapiendpoint/apiarea"
           entity="area_api_request_params">
        <input field="area_api_url">
            <label>URL</label>
            <type>text</type>
        </input>
    </block>
    <block title="Specify the types of alerts to retrieve, or use default" endpoint="areaapiendpoint/apiarea"
           entity="area_api_request_params">
        <text>
            &lt;i&gt;Provide list of coma separated values ex. malicious,suspicious,spam&lt;/i&gt;
        </text>
        <input field="disposition">
            <label>disposition</label>
            <type>text</type>
        </input>
    </block>
</setup>